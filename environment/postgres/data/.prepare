#!/bin/sh

once="/tmp/.once"
while true
do
	if [ -r "$once" ]
	then
		echo "default healthcheck"
		exit 0
	else
		find /data -type f -name "*.pre.sql" | \
			sort -n | \
			xargs -n 1 -IX sh -c 'psql -v ON_ERROR_STOP=1 --username test < X'

		find /data -type f -name "*.post.sql" | \
			sort -n | \
			xargs -n 1 -IX sh -c 'psql -v ON_ERROR_STOP=1 --username test < X' && touch "$once"
	fi
	sleep 1
done

